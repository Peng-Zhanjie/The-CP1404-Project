BoxLayout:
    orientation: 'vertical'
    GridLayout:
        rows:1
        cols:2
        TextInput:
            id: input_miles
            text: '34'
            font_size: 36
            on_text: app.calculate()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                id: Upper
                on_press: app.increment(1)
            Button:
                text: 'Down'
                id: Lower
                on_press: app.increment(-1)
    #Button:
        #text: 'Convert m to km'
        #on_press: app.calculate()
    Label:
        id: output_label
        font_size: 36
        text: '54.717'
        color: (1, 1, 0, 1)